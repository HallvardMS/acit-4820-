<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">
<!--based on asignment 2 made by Pierre O. H. Boniface-->
    <xacro:include filename="inertial_macros.xacro" />

    <xacro:property name="hull_radius" value="0.07"/>
    <xacro:property name="hull_length" value="1.0"/>
    <xacro:property name="hull_mass"   value="11.618"/>

    <xacro:property name="prop_radius" value="0.06"/>
    <xacro:property name="prop_length" value="0.05"/>
    <xacro:property name="prop_mass"   value="0.37"/>

    <material name="blue"> <color rgba="0.2 1.0 1.0 1.0"/> </material>
    <material name="black"><color rgba="0.1 0.1 0.1 1.0"/> </material>
    <material name="grey"> <color rgba="0.5 0.5 0.5 1.0"/> </material>

    <link name="base_footprint"/>

    <joint name="base_joint" type="fixed">
        <parent link="base_footprint"/>
        <child link="base_link"/>
        <origin xyz="0 0 0" rpy="0 0 0"/> 
    </joint>

    <link name="base_link">
        <visual>
            <geometry>
                <cylinder radius="${hull_radius}" length="${hull_length}"/>
            </geometry>
            <origin xyz="0 0 0" rpy="0 -${pi/2} 0"/>
            <material name="blue"/>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="${hull_radius}" length="${hull_length}"/>
            </geometry>
            <origin xyz="0 0 0" rpy="0 -${pi/2} 0"/>
        </collision>
        <xacro:inertial_cylinder mass="${hull_mass}" length="${hull_length}" radius="${hull_radius}">
            <origin xyz="0 0 0" rpy="0 -${pi/2} 0"/>
        </xacro:inertial_cylinder>
        <sensor name="imu_sensor" type="imu">
            <always_on>1</always_on>
            <update_rate>1</update_rate>
            <visualize>true</visualize>
            <topic>imu</topic>
        </sensor>
    </link>

    <link name="steering_yaw_link">
        <visual>
            <geometry><sphere radius="0.05"/></geometry>
            <material name="grey"/>
        </visual>
        <xacro:inertial_sphere mass="0.05" radius="0.05">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_sphere>
    </link>

    <joint name="steering_yaw_joint" type="revolute">
        <parent link="base_link"/>
        <child link="steering_yaw_link"/>
        <origin xyz="-0.55 0 0" rpy="0 0 0"/> 
        <axis xyz="0 1 0"/> 
        <limit lower="-${pi/2}" upper="${pi/2}" effort="50" velocity="100"/>
        <dynamics damping="2.0" friction="2.0"/> 
    </joint>

    <link name="steering_pitch_link">
        <visual>
            <geometry><box size="0.05 0.1 0.05"/></geometry>
            <material name="grey"/>
        </visual>
        <xacro:inertial_box mass="0.05" x="0.05" y="0.1" z="0.05">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_box>
    </link>

    <joint name="steering_pitch_joint" type="revolute">
        <parent link="steering_yaw_link"/>
        <child link="steering_pitch_link"/>
        <origin xyz="0.0 0 0" rpy="0 0 0"/>
        <axis xyz="0 0 1"/> 
        <limit lower="-${pi/2}" upper="${pi/2}" effort="50" velocity="100"/>
        <dynamics damping="2.0" friction="2.0"/>
    </joint>

    <link name="propeller_link">
        <visual>
            <geometry>
                <cylinder radius="${prop_radius}" length="${prop_length}"/>
            </geometry>
            <origin xyz="0 0 0" rpy="0 -${pi/2} 0"/>
            <material name="black"/>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="${prop_radius}" length="${prop_length}"/>
            </geometry>
            <origin xyz="0 0 0" rpy="0 -${pi/2} 0"/>
        </collision>
        <xacro:inertial_cylinder mass="${prop_mass}" length="${prop_length}" radius="${prop_radius}">
            <origin xyz="0 0 0" rpy="0 -${pi/2} 0"/>
        </xacro:inertial_cylinder>
    </link>

    <joint name="propeller_joint" type="continuous">
        <parent link="steering_pitch_link"/>
        <child link="propeller_link"/>
        <origin xyz="0 0 0" rpy="0 0 0"/> <axis xyz="1 0 0"/> <limit effort="100.0" velocity="10000.0"/>
        <dynamics damping="0.05" friction="0.0"/>
    </joint>

    <link name="moving_mass">
        <visual>
            <geometry>
                <cylinder radius="0.05" length="0.1"/>
            </geometry>
            <origin xyz="0 0 0" rpy="0 -${pi/2} 0"/>
            <material name="black"/>
        </visual>
        <xacro:inertial_cylinder mass="2.0" length="0.1" radius="0.1">
             <origin xyz="0 0 0" rpy="0 -${pi/2} 0"/>
        </xacro:inertial_cylinder>
    </link>

    <joint name="moving_mass_joint" type="prismatic">
        <parent link="base_link"/>
        <child link="moving_mass"/>
        <origin xyz="0 0 0" rpy="0 0 0"/> 
        <axis xyz="1 0 0"/> 
        <limit effort="1000.0" lower="-0.5" upper="0.5" velocity="10"/>
    </joint>
    <gazebo reference="base_link">
        <sensor name="imu_sensor" type="imu">
            <always_on>true</always_on>
            <update_rate>100.0</update_rate>
            <topic>imu_sensor_topic</topic>
        </sensor>
    </gazebo>
    <gazebo reference="base_link"> <material>Gazebo/Blue</material> </gazebo>
    <gazebo reference="propeller_link"> <material>Gazebo/Black</material> </gazebo>
    <gazebo reference="moving_mass"> <material>Gazebo/Black</material> </gazebo>

</robot>